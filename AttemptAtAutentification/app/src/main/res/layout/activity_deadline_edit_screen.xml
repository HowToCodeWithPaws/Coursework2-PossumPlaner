<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/deadline_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/deadline_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/title_caption"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/name_caption"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

    <EditText
        android:id="@+id/deadline_title"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:hint="@string/title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toEndOf="@id/title_caption"
        app:layout_constraintTop_toTopOf="@id/title_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/deadline_category"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/category"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/title_caption"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/categories_spinner"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="2dp"
        android:fadingEdge="horizontal|vertical"
        app:layout_constraintStart_toEndOf="@id/deadline_category"
        app:layout_constraintTop_toTopOf="@id/deadline_category" />

    <EditText
        android:id="@+id/notes_caption"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/notes_caption"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/deadline_category"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/deadline_notes"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:ellipsize="end"
        android:hint="@string/notes"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/notes_caption"
        app:layout_constraintTop_toTopOf="@id/notes_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/deadline_caption"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/deadline_caption"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/date_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/deadline_deadline"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/deadline"
        android:inputType="none"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/deadline_caption"
        app:layout_constraintTop_toTopOf="@id/deadline_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/date_caption"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/date_caption"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/notes_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/deadline_date"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/date"
        android:inputType="none"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/date_caption"
        app:layout_constraintTop_toTopOf="@id/date_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/deadline_importance_caption"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/importance_caption"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/deadline_caption"
        app:layout_constraintVertical_bias="0.0" />

    <RatingBar
        android:id="@+id/deadline_importance"
        style="@android:style/Widget.Material.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="@id/deadline_importance_caption"
        app:layout_constraintTop_toTopOf="@id/deadline_importance_caption"
        app:layout_constraintVertical_bias="0.004"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/rv_caption"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/subplans"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/deadline_importance_caption"
        app:layout_constraintVertical_bias="0.005" />

    <Button
        android:id="@+id/add_subplan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_buttons"
        android:textSize="12sp"
        app:icon="@android:drawable/ic_menu_add"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:layout_constraintStart_toEndOf="@id/rv_caption"
        app:layout_constraintTop_toTopOf="@id/rv_caption" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_subplans"
        android:layout_width="403dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/rv_caption"
        app:layout_constraintTop_toBottomOf="@id/rv_caption"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/deadline_putOff"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/putOff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/rv_subplans"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/putOff_spinner"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:fadingEdge="horizontal|vertical"
        app:layout_constraintStart_toEndOf="@id/deadline_putOff"
        app:layout_constraintTop_toTopOf="@id/deadline_putOff" />

    <EditText
        android:id="@+id/deadline_repeat"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/repeat"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/title_caption"
        app:layout_constraintTop_toBottomOf="@id/deadline_putOff"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/repeat_spinner"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:fadingEdge="horizontal|vertical"
        app:layout_constraintStart_toEndOf="@id/deadline_repeat"
        app:layout_constraintTop_toTopOf="@id/deadline_repeat" />


    <Button
        android:id="@+id/deadline_save"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_buttons"
        android:onClick="save"
        app:icon="@android:drawable/ic_menu_save"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deadline_repeat"
        app:layout_constraintVertical_bias="0.948" />

    <Button
        android:id="@+id/deadline_delete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_buttons"
        android:onClick="delete"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repeat_spinner"
        app:layout_constraintVertical_bias="0.945" />

</androidx.constraintlayout.widget.ConstraintLayout>